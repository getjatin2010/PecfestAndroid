<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/register_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="1"
        android:padding="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/register_counter"
        android:id="@+id/register_id"
        android:textSize="15sp"
        android:text="pec12344"
        android:textColor="#000"
        android:padding="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_name"
        android:layout_toRightOf="@id/register_counter"
        android:layout_below="@id/register_id"
        android:textSize="15dp"
        android:text="Abhinandan"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_invalid"
        android:textSize="14sp"
        android:text="Invalid"
        android:layout_toRightOf="@id/register_id"
        android:padding="5dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textSize="15sp"
        android:padding="5dp"
        android:id="@+id/register_remove"
        android:layout_alignParentRight="true" />

</RelativeLayout>